
pipeline {
  agent { label 'docker_agent' }

  stages {
   
              stage('gitclone') {

                        steps {
                                git 'https://github.com/aisakova29/ansible-itmo.git'
                        }
                }
             stage('Docker_build') {
                        steps {
                                sh 'ansible all -m ping'
                                sh 'ansible-playbook playbook1.yml'
                                sh 'ansible-playbook playbook2.yml'
      }
    }
  }
}
